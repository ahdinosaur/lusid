name: "simple"
version: "0.1.0"

params:
  whatever:
    type: "boolean"

setup: (params) =>
  - module: "@core/apt"
    id: "install-nvim"
    params:
      packages: ["neovim"]

  - module: "@core/apt"
    before:
      - "install-nvim"
    params:
      package: "curl"

  - module: "@core/file"
    params:
      type: "source"
      source: "./hello.txt"
      path: "/tmp/hello.txt"
